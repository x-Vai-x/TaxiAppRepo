<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myapp.taxi.mytaxiapp.CalculateTariffActivity"
    tools:showIn="@layout/activity_calculate_tariff">


    <Button
        android:id="@+id/btn_startDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start drive"/>

    <Button
        android:id="@+id/btn_stopDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop drive"/>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate tariff"/>

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"/>

</LinearLayout>
